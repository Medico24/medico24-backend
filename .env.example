# Application
APP_NAME=Medico24 API
APP_VERSION=0.1.0
ENVIRONMENT=development
DEBUG=true
API_V1_PREFIX=/api/v1

# Server
HOST=0.0.0.0
PORT=8000
RELOAD=true

# Database (Docker local PostgreSQL)
DATABASE_URL=postgresql+asyncpg://medico24:medico24_dev_password@postgres:5432/medico24
TEST_DATABASE_URL=postgresql+asyncpg://medico24:medico24_dev_password@postgres:5432/medico24_test

# Redis (Docker local Redis)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_USERNAME=default
REDIS_PASSWORD=""
REDIS_DECODE_RESPONSES=true

# JWT
JWT_SECRET_KEY=your-super-secret-jwt-key-min-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Google OAuth (Legacy - for web OAuth flow)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/auth/google/callback

# Firebase (for Flutter app authentication)
# Download your Firebase service account JSON from Firebase Console
# and set the path here, or set GOOGLE_APPLICATION_CREDENTIALS
FIREBASE_CREDENTIALS_PATH=firebase-service-account.json
FIREBASE_CONFIG_JSON=

# Admin Notification Secret
# Generate a strong random key for admin notification endpoint
# Example: openssl rand -hex 32
ADMIN_NOTIFICATION_SECRET=your-admin-notification-secret-key-min-32-chars

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
